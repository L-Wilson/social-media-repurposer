# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# Service Configuration
service_name = "social-media-repurposer"

# Domain Configuration
domain_name = "mycreatorkit.com"

# App Runner Configuration
cpu             = 1024  # 1 vCPU
memory          = 2048  # 2 GB
max_concurrency = 100   # requests per instance
min_size        = 1     # minimum instances
max_size        = 2     # maximum instances

# Application Environment Variables
# Copy this file to terraform.tfvars and add your actual API key
openai_api_key = "sk-your-openai-api-key-here"
